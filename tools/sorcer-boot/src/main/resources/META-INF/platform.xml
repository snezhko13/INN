<?xml version="1.0" encoding="UTF-8"?>
<!-- Default platform configuration -->
<platform>
	<!-- SORCER jars to load into the common classloader. -->
	<capability name="SORCER" common="yes">
		<version>5.0</version>
		<manufacturer>SORCERsoft.org</manufacturer>
		<classpath>
			${sorcer.home}/lib/sorcer/lib/sorcer-platform-${sorcer.version}.jar
			${sorcer.home}/lib/sorcer/lib/sorcer-lib-${sorcer.version}.jar
            ${sorcer.home}/lib/common/javax.inject-1.jar
            ${sorcer.home}/lib/common/plexus-utils-${plexus.version}.jar
		</classpath>
	</capability>

	<!-- River (Jini) jars to load into the common classloader. -->
	<capability name="River" common="yes">
		<version>2.2.1</version>
		<manufacturer>Apache Software Foundation</manufacturer>
		<classpath>
			${sorcer.home}/lib/river/jsk-lib-${river.version}.jar
			${sorcer.home}/lib/river/serviceui-${river.version}.jar
		</classpath>
	</capability>

</platform>

