# along with this program; if not, write to the Free Software
# Foundation, Inc., 59 Temple Place - Suite 330, Boston, MA  02111-1307, USA.

JAVA=${JAVA_HOME:=/usr/local/java}
JINI=${JINI_HOME:=/usr/local/jini}
HOST=${CLASS_FILE_SERVER_HOST:=`hostname`}
PORT=${CLASS_FILE_SERVER_PORT:=8080}
INITIAL_LOOKUP_GROUP=${INITIAL_LOOKUP_GROUP:=com.sun.bar}
MAHALO=${JINI}/services/mahalo
DEBUG_CONFIG_FILE=${DEBUG_CONFIG_FILE:=${MAHALO}/logging.properties}
LOG_DIR=${LOG_DIR:=${HOME}/jiniLogs}


start_transient() {
  if [ "$1" = "jeri" ]; then
    START_CONFIG=${MAHALO}/start-transient-mahalo.config
  else
    START_CONFIG=${MAHALO}/start-transient-jrmp-mahalo.config
  fi

  echo "Starting a Transient Mahalo using $1..."
  ${JAVA}/bin/java -Djava.security.policy=${START_POLICY} \
	-Djava.util.logging.config.file=${DEBUG_CONFIG_FILE} \
	-DSERVER_NAME=${HOST} \
	-DJINI=${JINI} \
	-DPORT=${PORT} \
	-DINITIAL_LOOKUP_GROUP=${INITIAL_LOOKUP_GROUP} \
	-DLOG_DIR=${LOG_DIR} \
	-jar ${JINI}/lib/start.jar \
	${START_CONFIG} &
}

start_persistent() {
  START_CONFIG=${MAHALO}/start-persistent-mahalo.config
  if [ "$1" = "jrmp" ]; then
    echo ""
    echo "Sorry, using a Persistent, Non-activatable Mahalo over jrmp"
    echo "is not recommended.  I will use jeri instead..."
    echo "For further information, see the Mahalo documentation."
    echo ""
  fi


  echo "Starting a Persistent, Non-activatable Mahalo using jeri..."
  ${JAVA}/bin/java -Djava.security.policy=${START_POLICY} \
	-Djava.util.logging.config.file=${DEBUG_CONFIG_FILE} \
	-DSERVER_NAME=${HOST} \
	-DJINI=${JINI} \
	-DPORT=${PORT} \
	-DINITIAL_LOOKUP_GROUP=${INITIAL_LOOKUP_GROUP} \
	-DLOG_DIR=${LOG_DIR} \
	-jar ${JINI}/lib/start.jar \
	${START_CONFIG} &
}

start_activatable() {
  if [ "$1" = "jeri" ]; then
    START_CONFIG=${MAHALO}/start-activatable-mahalo.config
  else
    START_CONFIG=${MAHALO}/start-activatable-jrmp-mahalo.config
  fi

  echo "Starting an Activatable Mahalo using $1"
  ${JAVA}/bin/java -Djava.security.policy=${START_POLICY} \
	-Djava.util.logging.config.file=${DEBUG_CONFIG_FILE} \
	-DSERVER_NAME=${HOST} \
	-DJINI=${JINI} \
	-DPORT=${PORT} \
	-DINITIAL_LOOKUP_GROUP=${INITIAL_LOOKUP_GROUP} \
	-DLOG_DIR=${LOG_DIR} \
	-jar ${JINI}/lib/start.jar \
	${START_CONFIG} &
}


##
##  The Entry Point of this script can start mahalo in transient,
##  persistent, or activatable mode.
##


START_POLICY=${MAHALO}/start.policy
case "$1" in
  --transient)  
	mode=transient
	;;

  --persistent) 
	mode=persistent
	;;
  
  --activatable)
	mode=activatable
	;;

  *) echo $"Usage: $0 {--transient|--persistent|--activatable} [--jeri|--jrmp]"
	exit 1
	;;
esac

if [ "$#" -ne  2 ]; then
  protocol=jeri
else
  case "$2" in
    --jeri)
  	protocol=jeri
	;;
    --jrmp)
	protocol=jrmp
	;;
    *) echo $"Usage: $0 {--transient|--persistent|--activatable} [--jeri|--jrmp]"
	exit 1
	;;
  esac
fi


case "$mode" in
  transient)
    start_transient $protocol
    ;;

  persistent)
    start_persistent $protocol
    ;;

  activatable)
    start_activatable $protocol
    ;; 
esac
  
exit 0
